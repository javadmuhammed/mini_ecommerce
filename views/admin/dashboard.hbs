                        </div>
                        <div class="list_drop_wrapper" id="dropwrapper_collapse_control">
                            <ul class="list_ul_drop">
                                {{#each adminDetails.products}}
                                <li class="col-xs-6 col-md-3 col-lg-2 col-6">
                                    <div class="box_list_drop_wrapper">
                                        <img src="../productImage/{{product_image}}"  alt="">
                                        <a href="">{{product_name}}</a>
                                        <span>Price: {{price}}</span>
                                        <span>Discount: {{discount}}</span>
                                        <span>Tax : {{tax}}</span> 
                                    </div>
                                </li>
                                {{/each}}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
