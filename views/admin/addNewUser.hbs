        <div class="content_body" id="content_body">
            <div class="wrapper_content_body">
                {{#if status}}
                <div class="alert alert-{{status}}">
                    {{msg}}
                </div>
                {{/if}}

                <h4>Add New User</h4>
                <div class="content_box_border">
                    <form action="/admin/addUser" method="post" enctype="multipart/form-data">
                        <div class="row mt-2">

                            <div class="col-md-6">
                                <div class="form_group">
                                    <label for="">Enter Username </label>
                                    <input type="text" name="username" placeholder="Enter user name">
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form_group">
                                    <label for="">Enter User Phone Number </label>
                                    <input type="text" name="phone" placeholder="Enter user phone number">
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form_group">
                                    <label for="">Enter Email Address</label>
                                    <input type="text" name="email" placeholder="Enter user email address">
                                </div>
                            </div>


                            <div class="col-md-6">
                                <div class="form_group">
                                    <label for="">Enter Location</label>
                                    <input type="text" name="location" placeholder="Enter Location">
                                </div>
                            </div>


                            <div class="col-md-6">
                                <div class="form_group">
                                    <label for="">User Role</label>
                                    <input type="text" name="role" placeholder="Eg:Developer,Sales">
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form_group">
                                    <label for="">Profile Picture</label>
                                    <input type="file" name="dp">
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form_group">
                                    <label for="">Create Password</label>
                                    <input type="text" name="password" placeholder="Create user password">
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form_group">
                                    <label for="">Block Status</label>
                                    <select name="block" id="">
                                        <option value="">Select Options</option>
                                        <option value="active">Active</option>
                                        <option value="block">Block</option>
                                    </select>
                                </div>
                            </div>









                            <div class="col-12 text-center">
                                <button class="form_btn btn_green" type="submit">Submit</button>
                                <button class="form_btn btn_warning" type="reset">Cancel</button>
                            </div>

                        </div>
                    </form>
                </div>


            </div>
        </div>
    </div>





