<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Mini Ecommerce Site</title>
    <script src="https://kit.fontawesome.com/6f707f910a.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="assets/css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
</head>

<body>


    {{> users/header}}

    <div class="bg-primary">
        <div class="container py-4">
            <!-- Breadcrumb -->
            <nav class="d-flex">
                <h6 class="mb-0">
                    <a href="" class="text-white-50">Home</a>
                    <span class="text-white-50 mx-2"> &gt; </span>
                    <a href="" class="text-white"><u>Account Page</u></a>
                </h6>
            </nav>
            <!-- Breadcrumb -->
        </div>
    </div>

    <section class="bg-light pt-5 pb-5">
        <div class="container">
            <div class="main-body">

                <div class="row gutters-sm">
                    <div class="col-md-4 mb-3">
                        <div class="card">
                            <div class="card-body">
                                <div class="d-flex flex-column align-items-center text-center"> <img
                                        src="../user_profile/{{accountData.user.dp}}" alt="Admin" class="rounded-circle"
                                        width="150">
                                    <div class="mt-3">
                                        <h4>{{accountData.user.name}}</h4>
                                        <p class="text-secondary mb-1">{{accountData.user.role}}</p>
                                        <p class="text-muted font-size-sm">{{accountData.user.location}}</p>
                                    </div>
                                    <a href="/logout" class="btn btn-danger"><i class="fa fa-sign-out"
                                            aria-hidden="true"></i>
                                        Logout</a>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="col-md-8">
                        {{#if accountData.color}}
                        <div class='alert alert-{{accountData.color}}'>
                            {{accountData.message}}
                        </div>
                        {{/if}}


                        <div class="card mb-3">
                            <div class="card-body">
                                <div id="data_display">
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Full Name</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary"> {{accountData.user.name}}</div>
                                    </div>
                                    <hr>
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Email</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary"> {{accountData.user.email}}</div>
                                    </div>
                                    <hr>
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Phone</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary"> {{accountData.user.phone}}</div>
                                    </div>
                                    <hr>
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Last Loggin</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary"> {{accountData.user.lastLoggin}}</div>
                                    </div>
                                    <hr>

                                    <div class="row">
                                        <div class="col-sm-12"> <a class="btn btn-info " id="editProfile"
                                                target="__blank">Edit</a>
                                        </div>
                                    </div>
                                </div>
                                <div id="data_edit">

                                    <form action="/updateUserProfile" id="signUP" method="post" enctype="multipart/form-data">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="input_group">
                                                    <label for="">Enter Username </label>
                                                    <input type="text" name="username" value="{{accountData.user.name}}"
                                                        placeholder="Enter user name">
                                                </div>
                                            </div>

                                            <div class="col-md-6">
                                                <div class="input_group">
                                                    <label for="">Enter User Phone Number </label>
                                                    <input type="text" name="phone" value="{{accountData.user.phone}}"
                                                        placeholder="Enter user phone number">
                                                </div>
                                            </div>

                                            <div class="col-md-6">
                                                <div class="input_group">
                                                    <label for="">Enter Email Address</label>
                                                    <input type="text" name="email" value="{{accountData.user.email}}"
                                                        placeholder="Enter user email address">
                                                </div>
                                            </div>


                                            <div class="col-md-6">
                                                <div class="input_group">
                                                    <label for="">Enter Location</label>
                                                    <input type="text" name="location"
                                                        value="{{accountData.user.location}}"
                                                        placeholder="Enter Location">
                                                </div>
                                            </div>


                                            <div class="col-md-6">
                                                <div class="input_group">
                                                    <label for="">User Role</label>
                                                    <input type="text" name="role" value="{{accountData.user.role}}"
                                                        placeholder="Eg:Developer,Sales">
                                                </div>
                                            </div>

                                            <div class="col-md-6">
                                                <div class="input_group">
                                                    <label for="">Profile Picture</label>
                                                    <input type="file" name="dp">
                                                </div>
                                            </div>

                                            <div class="col-md-6">
                                                <div class="input_group">
                                                    <label for="">Create Password</label>
                                                    <input type="password" name="password"  id="password1"
                                                        placeholder="Create user password">
                                                </div>
                                            </div>

                                            <div class="col-md-6">
                                                <div class="input_group">
                                                    <label for="">Confirm Password</label>
                                                    <input type="password"   name="cpassword" id="password2"
                                                        placeholder="Confirm user password">
                                                </div>
                                            </div>

                                        </div>
                                        <button type="submit">Save</button>
                                    </form>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </section>





    <section class="mt-5" style="background-color: #f5f5f5;">
        <div class="container text-dark pt-3">
            <header class="pt-4 pb-3">
                <h3>Why choose us</h3>
            </header>

            <div class="row mb-4">
                <div class="col-lg-4 col-md-6">
                    <figure class="d-flex align-items-center mb-4">
                        <span class="rounded-circle bg-white p-3 d-flex me-2 mb-2">
                            <i class="fas fa-camera-retro fa-2x fa-fw text-primary floating"></i>
                        </span>
                        <figcaption class="info">
                            <h6 class="title">Reasonable prices</h6>
                            <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit sed do eiusmor</p>
                        </figcaption>
                    </figure>

                </div>

                <div class="col-lg-4 col-md-6">
                    <figure class="d-flex align-items-center mb-4">
                        <span class="rounded-circle bg-white p-3 d-flex me-2 mb-2">
                            <i class="fas fa-star fa-2x fa-fw text-primary floating"></i>
                        </span>
                        <figcaption class="info">
                            <h6 class="title">Best quality</h6>
                            <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit sed do eiusmor</p>
                        </figcaption>
                    </figure>
                    <!-- itemside // -->
                </div>
                <!-- col // -->
                <div class="col-lg-4 col-md-6">
                    <figure class="d-flex align-items-center mb-4">
                        <span class="rounded-circle bg-white p-3 d-flex me-2 mb-2">
                            <i class="fas fa-plane fa-2x fa-fw text-primary floating"></i>
                        </span>
                        <figcaption class="info">
                            <h6 class="title">Worldwide shipping</h6>
                            <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit sed do eiusmor</p>
                        </figcaption>
                    </figure>
                    <!-- itemside // -->
                </div>
                <!-- col // -->
                <div class="col-lg-4 col-md-6">
                    <figure class="d-flex align-items-center mb-4">
                        <span class="rounded-circle bg-white p-3 d-flex me-2 mb-2">
                            <i class="fas fa-users fa-2x fa-fw text-primary floating"></i>
                        </span>
                        <figcaption class="info">
                            <h6 class="title">Customer satisfaction</h6>
                            <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit sed do eiusmor</p>
                        </figcaption>
                    </figure>
                    <!-- itemside // -->
                </div>
                <!-- col // -->
                <div class="col-lg-4 col-md-6">
                    <figure class="d-flex align-items-center mb-4">
                        <span class="rounded-circle bg-white p-3 d-flex me-2 mb-2">
                            <i class="fas fa-thumbs-up fa-2x fa-fw text-primary floating"></i>
                        </span>
                        <figcaption class="info">
                            <h6 class="title">Happy customers</h6>
                            <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit sed do eiusmor</p>
                        </figcaption>
                    </figure>
                    <!-- itemside // -->
                </div>
                <!-- col // -->
                <div class="col-lg-4 col-md-6">
                    <figure class="d-flex align-items-center mb-4">
                        <span class="rounded-circle bg-white p-3 d-flex me-2 mb-2">
                            <i class="fas fa-box fa-2x fa-fw text-primary floating"></i>
                        </span>
                        <figcaption class="info">
                            <h6 class="title">Thousand items</h6>
                            <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit sed do eiusmor</p>
                        </figcaption>
                    </figure>
                    <!-- itemside // -->
                </div>
                <!-- col // -->
            </div>
        </div>
        <!-- container end.// -->
    </section>


    {{> users/footer}}


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
        crossorigin="anonymous"></script>


    <script>
        let editBtn = document.querySelector("#editProfile");
        let editTab = document.querySelector("#data_edit");
        let profile_data = document.querySelector("#data_display");

        editBtn.addEventListener("click", function () {

            if (window.getComputedStyle(editTab).display == "none") {
                profile_data.style.display = "none";
                editTab.style.display = "block";

            }
        })

        document.getElementById('signUP').addEventListener('submit', function (event) {
            event.preventDefault();

            const password1 = document.getElementById('password1').value;
            const password2 = document.getElementById('password2').value;

            if (password1 === password2) {
                this.submit();
            } else {
                alert('Passwords do not match. Please make sure both passwords are the same.');
            }
        });
    </script>
</body>

</html>