<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Login Page in Node js</title>
    <link rel="stylesheet" href="assets/css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
</head>

<body>


    <section id="sp_background">
        <div class="containe_login">
            <div class="container_login">
                <div class="content_login_form">
                    <div class="form_header">
                        <div class="headLogin">
                            <h4>Sign Up <span>Panel</span></h4>
                            <p>Sign in to start your session</p>
                        </div>
                        {{#if data}}
                        {{#if data.error}}
                        <div class="alertMessage">
                            {{{data.msg}}}
                        </div>
                        {{/if}}
                        {{/if}}

                    </div>
                    <div class="loginForm">
                        <form action="/user-sign-up" id="signUP" enctype="multipart/form-data" method="post">

                            <div class="row mt-2">

                                <div class="col-md-6">
                                    <div class="input_group">
                                        <label for="">Enter Username </label>
                                        <input type="text" name="username" placeholder="Enter user name">
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="input_group">
                                        <label for="">Enter User Phone Number </label>
                                        <input type="text" name="phone" placeholder="Enter user phone number">
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="input_group">
                                        <label for="">Enter Email Address</label>
                                        <input type="text" name="email" placeholder="Enter user email address">
                                    </div>
                                </div>


                                <div class="col-md-6">
                                    <div class="input_group">
                                        <label for="">Enter Location</label>
                                        <input type="text" name="location" placeholder="Enter Location">
                                    </div>
                                </div>


                                <div class="col-md-6">
                                    <div class="input_group">
                                        <label for="">User Role</label>
                                        <input type="text" name="role" placeholder="Eg:Developer,Sales">
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="input_group">
                                        <label for="">Profile Picture</label>
                                        <input type="file" name="dp">
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="input_group">
                                        <label for="">Create Password</label>
                                        <input type="password" id="password1" name="password"
                                            placeholder="Create user password">
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="input_group">
                                        <label for="">Confirm Password</label>
                                        <input type="password" id="password2" name="cpassword"
                                            placeholder="Confirm user password">
                                    </div>
                                </div>




                            </div>

                            <div class="buttonLogin">
                                <button type="submit">Sign in</button>
                                <div class="mt-2">
                                    <a href="/sign-in" type="button" class="w-100 btn btn-success">Don't have an
                                        account! create
                                        one</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
        crossorigin="anonymous"></script>


    <script>

        document.getElementById('signUP').addEventListener('submit', function (event) { 
            event.preventDefault();

            const password1 = document.getElementById('password1').value;
            const password2 = document.getElementById('password2').value;

            if (password1 === password2) {
                this.submit();
            } else {
                alert('Passwords do not match. Please make sure both passwords are the same.');
            }
        });


        let errorAlert = document.querySelector(".alertMessage");
        if (errorAlert.textContent.trim() == "") {
            errorAlert.style.display = "none"
        }


        const urlParams = new URLSearchParams(window.location.search);
        if (urlParams.get("logout")) {
            alert("Logout")
        }






         
    </script>
</body>

</html>